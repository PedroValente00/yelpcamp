<% layout('templates/boilerplate') -%>
<div class="container my-auto">
<div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4 m-auto">
<div class="card shadow">
  <img src="https://images.unsplash.com/photo-1539183204366-63a0589187ab?q=80&w=1374&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D" 
  class="card-img-top" alt="Login" style="max-height:40vh">
  <div class="card-body">
    <h5 class="card-title">Login</h5>
     
<form action="/login" method="POST" class="needs-validation" novalidate>
  <section class="mb-3">
      <label class="form-label" for="username">Username</label>
      <input type="text" name="username" id="username" placeholder="Username" 
      class="form-control" required autofocus>
      <div class="valid-feedback">
          Looks good!
        </div>
      </section>
  
  <section class="mb-3">
      <label class="form-label" for="password">Password</label>
      <input type="password" name="password" id="password" class="form-control" required>
      <div class="valid-feedback">
          Looks good!
        </div>
        <div class="d-grid gap-2">
          <button class="btn btn-success mt-3">Login</button>
        </div>
      </section>
</form>

</div>
  </div>
</div>
</div>